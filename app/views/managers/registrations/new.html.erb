<div class="container row mx-auto mt-5 mb-5">
  <div class="signup text-center bg-light py-4 px-3 col-md-6 mx-auto rounded">
    <h3 class="signup-title mb-4">管理職　新規登録</h3>

    <%= form_model: @staff, url: manager_registration_path, local: true do |f| %>
      <%= render "managers/shared/error_messages", resource: resource %>

      <div class="field mb-3">
        <i class="fas fa-user"></i><%= f.label :名前 %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>

      <div class="field mb-3">
        <i class="far fa-envelope mr-2"></i><%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field mb-3">
        <i class="fas fa-key mr-2"></i><%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field mb-4">
        <%= f.label :パスワード（確認用） %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions mb-4">
        <%= f.submit "新規作成" %>
      </div>
    <% end %>

    <%= link_to "登録済みの方はこちら", new_manager_session_path %>
  </div>
</div>
