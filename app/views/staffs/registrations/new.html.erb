<div class="container row mx-auto mt-5 mb-5">
  <div class="signup text-center bg-light py-4 px-3 col-md-6 mx-auto rounded">
    <h3 class="signup-title mb-4">担当者　新規登録</h3>

    <%= form_with model: @staff, url: staff_registration_path, local: true do |f| %>
      <%= render "staffs/shared/error_messages", resource: resource %>

      <div class="field mb-3">
        <i class="fas fa-user"></i><%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>

      <div class="field mb-3">
        <i class="far fa-envelope mr-2"></i><%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field mb-3">
        <i class="fas fa-key mr-2"></i><%= f.label :password %>
        <% if @minimum_password_length %>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field mb-4">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions mb-4">
        <%= f.submit "新規作成", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= link_to "登録済みの方はこちら", new_staff_session_path %>
  </div>
</div>

