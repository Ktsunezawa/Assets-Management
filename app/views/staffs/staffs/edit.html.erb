<div class="container row mx-auto">
  <div class="py-4 px-3 col-md-8 mx-auto">
    <h2>マイページ</h2>
      <%= form_with model: @staff, url: staffs_staffs_path, local: true do |f| %>
        <div class="row mt-5 mb-4">
          <%= f.label "名前", class: "col-md-4" %>
          <%= f.text_field :name, class: "col-md-4" %>
        </div>
        <div class="row mb-4">
          <%= f.label "メールアドレス", class: "col-md-4" %>
          <%= f.text_field :email, class: "col-md-4" %>
        </div>
        <div class="row mb-5">
          <%= f.label "パスワード", class: "col-md-4" %>
          <%= f.password_field :password, class: "col-md-4" %>
        </div>

        <%= f.submit "更新", class: "mx-auto px-5 d-block btn btn-success" %>

      <% end %>
  </div>
</div>